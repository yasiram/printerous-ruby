<!DOCTYPE html>
<html lang="ID">
    <head>
        <meta charset="utf-8">
        <meta name="description" content="Printerous Laravel Test">
        <meta name="author" content="Yasir Ahmad Munif">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- <meta name="csrf-token" content="{{ csrf_token() }}"> -->
        <title>Login</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag 'bootstrap.min', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body class="container pt-5">
        <div class="row justify-content-md-center">
            <div class="col-4">
                <div class="row">
                    <h3>Selamat Datang</h3>
                </div>
                <div class="row">
                    <div class="card mt-4">
                        <div class="card-body">
                            <form action="" method="POST">
                                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
