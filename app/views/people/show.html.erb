<% content_for :title do %>
  Detail Person
<% end %>
<div class="row justify-content-md-center">
<div class="col-8 ">
   <div class="row mt-3">
      <div class="col-10">
         <h4>Person Detail</h4>
      </div>
   </div>
   <div class="row mt-3">
      <form id="form-org">
         <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <label class="col-sm-10 col-form-label" id="name"><%= @people.name %></label>
         </div>
         <div class="mb-3 row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <label class="col-sm-2 col-form-label" id="email"><%= @people.email %></label>
         </div>
         <div class="mb-3 row">
            <label for="phone" class="col-sm-2 col-form-label">Phone</label>
            <label class="col-sm-2 col-form-label" id="phone"><%= @people.phone %></label>
         </div>
         <div class="mb-3 row">
            <label for="website" class="col-sm-2 col-form-label">Organization</label>
            <label class="col-sm-2 col-form-label" id="website"><%= @people.organization.name %></label>
         </div>
         <div class="mb-3 row">
            <label for="logo" class="col-sm-2 col-form-label">Avatar</label>
            <div class="col-sm-10">
               <img src="<%= url_for(@people.avatar) %>" id="logo" width="100">
            </div>
         </div>
      </form>
   </div>
</div>
</div>
